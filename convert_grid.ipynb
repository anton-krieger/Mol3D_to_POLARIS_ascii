   "source": [
    "# Define Mol3D reader"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 1,
   "id": "e8ade48d-8f38-4484-98c7-bf4529a6a7d3",
   "metadata": {},
   "outputs": [],
   "source": [
    "import os\n",
    "import numpy as np\n",
    "from astropy.io import fits\n",
    "\n",
    "class Mol3Dreader:\n",
    "    def __init__(self, path_mol3d_model, pname, \n",
    "                 path_r_coord=None, path_ph_coord=None, path_th_coord=None):\n",
    "        # Initialize paths\n",
    "        self.path_mol3d_model = path_mol3d_model\n",
    "        self.pname = pname\n",
    "        self.path_r_coord = path_r_coord\n",
    "        self.path_ph_coord = path_ph_coord\n",
    "        self.path_th_coord = path_th_coord\n",
    "        \n",
    "        # Load the FITS file data\n",
    "        self.data = self._load_fits_data()\n",
    "        \n",
    "        # Load coordinate boundaries and mid-points\n",
    "        self.num_cells_r, self.r_boundaries, self.r_midpoints = self._load_coordinates(self.path_r_coord, 'a')\n",
    "        self.num_cells_th, self.th_boundaries, self.th_midpoints = self._load_coordinates(self.path_th_coord, 'b')\n",
    "        self.num_cells_ph, self.ph_boundaries, self.ph_midpoints = self._load_coordinates(self.path_ph_coord, 'c')\n",
    "\n",
    "    def _load_fits_data(self):\n",
    "        \"\"\"\n",
    "        Load data from the FITS file and store it as a numpy array.\n",
    "        \"\"\"\n",
    "        fits_path = os.path.join(self.path_mol3d_model, self.pname + '_QvQp_000T_model.fits')\n",
    "        if not os.path.exists(fits_path):\n",
    "            raise FileNotFoundError(f\"FITS file not found at path: {fits_path}\")\n",
    "        \n",
    "        with fits.open(fits_path) as hdul:\n",
    "            data = hdul[0].data  # Assuming data is in the first extension\n",
    "            return np.array(data)\n",
    "\n",
    "    def _load_coordinates(self, path_coord, typ):\n",
    "        \"\"\"\n",
    "        Load the coordinate boundaries and calculate midpoints.\n",
    "        \"\"\"\n",
    "        if path_coord is None:\n",
    "            # if not provided assume regular Mol3D directory structure\n",
    "            path_coord = os.path.join(self.path_mol3d_model, \n",
    "                                      '../input/grid', \n",
    "                                      self.pname + f'_QvQp_000_HDwithGRID_HD_GRID_{typ}_boundaries.dat'\n",
    "                                     )\n",
    "        \n",
    "        if not os.path.exists(path_coord):\n",
    "            raise FileNotFoundError(f\"Coordinate file not found at path: {path_coord}\")\n",
    "        \n",
    "        with open(path_coord, 'r') as file:\n",
    "            lines = file.readlines()\n",
    "            num_cells = int(lines[0].strip())\n",
    "            boundaries = np.array([float(line.strip()) for line in lines[2:]])\n",
    "            if len(boundaries) != num_cells + 1:\n",
    "                raise ValueError(f\"Expected {num_cells + 1} boundaries, but got {len(boundaries)}\")\n",
    "            \n",
    "            midpoints = 0.5 * (boundaries[:-1] + boundaries[1:])\n",
    "            return num_cells, boundaries, midpoints\n",
    "\n",
    "    def get_column(self, column_name):\n",
    "        \"\"\"\n",
    "        Retrieve data from a specific column based on the provided column name.\n",
    "        \"\"\"\n",
    "        index = self.__index.get(column_name)\n",
    "        if index is None:\n",
    "            raise ValueError(f\"Column '{column_name}' not found in the data index.\")\n",
    "        return self.data[:, index]\n",
    "\n",
    "    def get_column_unit(self, column_name):\n",
    "        \"\"\"\n",
    "        Retrieve the unit of a specific column.\n",
    "        \"\"\"\n",
    "        unit = self.__unit.get(column_name)\n",
    "        if unit is None:\n",
    "            raise ValueError(f\"Unit for column '{column_name}' not found.\")\n",
    "        return unit\n",
    "\n",
    "    # Static index and unit dictionaries\n",
    "    __index = {\n",
    "        \"x\": 0,\n",
    "        \"y\": 1,\n",
    "        \"z\": 2,\n",
    "        \"n_dust\": 3,\n",
    "        \"n_mol\": 4,\n",
    "        \"n_H2\": 5,\n",
    "        \"n_H2_para\": 6,\n",
    "        \"n_H2_ortho\": 7,\n",
    "        \"t_dust\": 8,\n",
    "        \"t_gas\": 9,\n",
    "        \"v_x\": 10,\n",
    "        \"v_y\": 11,\n",
    "        \"v_z\": 12,\n",
    "        \"Q_plus\": 13,\n",
    "        \"q_plus_src\": 14\n",
    "        # Note: Add other columns if need be\n",
    "    }\n",
    "\n",
    "    __unit = {\n",
    "        \"x\": \"au\",\n",
    "        \"y\": \"au\",\n",
    "        \"z\": \"au\",\n",
    "        \"n_dust\": \"1/m^3\",\n",
    "        \"n_mol\": \"1/m^3\",\n",
    "        \"n_H2\": \"1/m^3\",\n",
    "        \"n_H2_para\": \"1/m^3\",\n",
    "        \"n_H2_ortho\": \"1/m^3\",\n",
    "        \"t_dust\": \"K\",\n",
    "        \"t_gas\": \"K\",\n",
    "        \"v_x\": \"m/s\", \n",
    "        \"v_y\": \"m/s\",\n",
    "        \"v_z\": \"m/s\",\n",
    "        \"Q_plus\": \"J/m^3 (total)\",\n",
    "        \"q_plus_src\": \"J/m^3 (HD only)\"\n",
    "        # Note: see note above\n",
    "    }\n",
    "\n",
    "\n"
   ]
  },
