   "id": "b25c273e-0cb4-4d14-8b60-7a6ee00627b5",
   "metadata": {},
   "source": [
    "# Define converter Mol3D model to ascii grid File for polaris tools"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "id": "29399e9d-2e34-4dc7-b631-68b8285b6aea",
   "metadata": {},
   "outputs": [],
   "source": [
    "class PolarisAsciiWriter:\n",
    "    def __init__(self, mol3d_model, path_polaris_model, dust_species_info):\n",
    "        self.mol3d_model = mol3d_model\n",
    "        self.path_polaris_model = path_polaris_model\n",
    "        self.dust_species_info = dust_species_info\n",
    "        self.num_dust_species = len(self.dust_species_info.keys())\n",
    "        self.gas_density_default = 1.0e-20\n",
    "\n",
    "        # Validate dust_species_info\n",
    "        assert 0 in dust_species_info, \"Entry for IDdust=0 must be provided.\"\n",
    "        assert len(dust_species_info) <= 2, \"At most two dust species can be defined.\"\n",
    "\n",
    "    def _select_IDs(self):\n",
    "        \"\"\"\n",
    "        Decide which IDs to use in the polaris model depending on the number of dust grain sizes.\n",
    "        \"\"\"\n",
    "        ids = list(self.dust_species_info.keys())\n",
    "        assert ids in [[0], [0, 1]], f\"Error! Use ID=0 and optionally also ID=1. Used IDs: {ids}.\"\n",
    "\n",
    "        if self.num_dust_species == 1: return [0, 1, 2]\n",
    "        elif self.num_dust_species == 2: return [0, 1, 1, 2]\n",
    "        else:\n",
    "            assert ValueError(f\"Error! Somethong went wrong: ids='{ids}'\")\n",
    "    \n",
    "    def create_ascii(self):\n",
    "        \"\"\"\n",
    "        Create an ASCII file that POLARIS can read from the Mol3D model.\n",
    "        \"\"\"\n",
    "        # constants for conversion\n",
    "        AU = 1.496e+11\n",
    "        \n",
    "        # select IDs if not provided\n",
    "        selected_ids = self._select_IDs()\n",
    "\n",
    "        # write polaris model\n",
    "        output_path = os.path.join(self.path_polaris_model, \"polaris_model_ascii.txt\")\n",
    "        with open(output_path, 'w') as ascii_file:\n",
    "            # 1st line: Gridtype, num IDs, ID ID ID ID...\n",
    "            line = '30 '                              # spherical model\n",
    "            line = line + f'{len(selected_ids)} '     # number of IDs\n",
    "            line = line + ' '.join(map(str, selected_ids)) + '\\n' # IDs\n",
    "            ascii_file.write(line)\n",
    "\n",
    "            # 2nd line: model space boundaries\n",
    "            line = f'{self.mol3d_model.r_boundaries.min()*AU} {self.mol3d_model.r_boundaries.max()*AU} '\n",
    "            # line += f'0 {2*np.pi} '\n",  # phi/theta boundaries not required
    "            line += f'\\n'\n",
    "            ascii_file.write(line)\n",
    "\n",
    "            # 3rd line: Nr, Nph, Nth\n",
    "            ascii_file.write(f'{self.mol3d_model.num_cells_r} {self.mol3d_model.num_cells_ph} {self.mol3d_model.num_cells_th}\\n')\n",
    "\n",
    "            # 4th line: sr, sph, sth\n",
    "            ascii_file.write('0 0 0\\n')\n",
    "            \n",
    "            # 5th - 7th line: cell boundaries\n",
    "            if self.mol3d_model.r_boundaries is not None:\n",
    "                ascii_file.write(\" \".join(map(str, self.mol3d_model.r_boundaries[1:-1] * AU)) + \"\\n\")\n",
    "            if self.mol3d_model.ph_boundaries is not None:\n",
    "                ascii_file.write(\" \".join(map(str, self.mol3d_model.ph_boundaries[1:-1])) + \"\\n\")\n",
    "            if self.mol3d_model.th_boundaries is not None:\n",
    "                # Polaris uses th in [0, pi], while Mol3D uses th in [-pi/2, pi/2]\n",
    "                # therefore we need to shift it\n",
    "                # shifted_theta = np.concatenate(([0], self.mol3d_model.th_boundaries[1:-1] + np.pi / 2, [np.pi]))\n",
    "                ascii_file.write(\" \".join(map(str, self.mol3d_model.th_boundaries[1:-1] + np.pi / 2)) + \"\\n\")\n",
    "\n",
    "            # Write DATA area with correct structure\n",
    "            data_array = self._generate_data_array(selected_ids)\n",
    "            for row in data_array:\n",
    "                ascii_file.write(\" \".join(map(str, row)) + \"\\n\")\n",
    "\n",
    "    def _generate_data_array(self, selected_ids):\n",
    "        \"\"\"\n",
    "        Generate the data array containing all relevant information for each cell.\n",
    "        \"\"\"\n",
    "        num_cells = self.mol3d_model.data.shape[0]\n",
    "        data_array = np.zeros((num_cells, len(selected_ids)))\n",
    "\n",
    "        for i, id in enumerate(selected_ids):\n",
    "            column_name = self.__get_column_name_by_id(id)\n",
    "            if column_name in [\"amin\", \"amax\", \"IDdust\"]:\n",
    "                # Use the values from dust_species_info\n",
    "                dust_index = 0 if selected_ids[:i].count(id) == 0 else 1\n",
    "                if column_name == \"amin\":\n",
    "                    data_array[:, i] = self.dust_species_info[dust_index][0]\n",
    "                elif column_name == \"amax\":\n",
    "                    data_array[:, i] = self.dust_species_info[dust_index][1]\n",
    "                elif column_name == \"IDdust\":\n",
    "                    data_array[:, i] = dust_index\n",
    "            elif id == 0:  # Handle gas by inserting a default value. Note: change if gas becomes important\n",
    "                data_array[:, i] = self.gas_density_default\n",
    "            elif id == 1:  # Handle n_dust with potential scaling for multiple species\n",
    "                if selected_ids[:i].count(id) == 0:\n",
    "                    dust_fraction = self.dust_species_info[0][2]\n",
    "                    data_array[:, i] = self.mol3d_model.get_column(column_name) * dust_fraction\n",
    "                else:\n",
    "                    #################################################################################################\n",
    "                    # Note: If dust settling shall be used for the 2nd dust species, implement it here,             #\n",
    "                    #       by replacing this constant assignment of \"self.dust_species_info[1][2]\" to a functional #\n",
    "                    #       call depending potentially on the position and density in the grid or similarly         #\n",
    "                    #       >   dust_fraction = self.dust_settling(...)                                             #\n",
    "                    #       Then you'd have to define this dust_settling function in this class too.                #\n",
    "                    #################################################################################################\n",
    "                    dust_fraction = self.dust_species_info[1][2]    # constant ratio of second species to first species in each cell\n",
    "                    data_array[:, i] = self.mol3d_model.get_column(column_name) * dust_fraction\n",
    "            else:\n",
    "                data_array[:, i] = self.mol3d_model.get_column(column_name)\n",
    "\n",
    "        return data_array\n",
    "\n",
    "    def __get_column_name_by_id(self, id):\n",
    "        \"\"\"\n",
    "        Map the provided ID to the corresponding column name.\n",
    "        \"\"\"\n",
    "        id_map = {\n",
    "            0: \"n_gas\",\n",
    "            1: \"n_dust\",\n",
    "            2: \"t_dust\",\n",
    "            3: \"t_gas\",\n",
    "            4: \"Bx\",\n",
    "            5: \"By\",\n",
    "            6: \"Bz\",\n",
    "            7: \"v_x\",\n",
    "            8: \"v_y\",\n",
    "            9: \"v_z\",\n",
    "            10: \"px\",\n",
    "            11: \"py\",\n",
    "            12: \"pz\",\n",
    "            13: \"aalg\",\n",
    "            14: \"amin\",\n",
    "            15: \"amax\",\n",
    "            16: \"q\",\n",
    "            17: \"sigma_mol\",\n",
    "            18: \"vturb\",\n",
    "            19: \"PDA\",\n",
    "            20: \"IDO\",\n",
    "            21: \"IDdust\",\n",
    "            22: \"nth\",\n",
    "            23: \"Te\",\n",
    "            24: \"nCR\",\n",
    "            25: \"gamma_min\",\n",
    "            26: \"gamma_max\",\n",
    "            27: \"p\",\n",
    "            28: \"rho_g\",\n",
    "            29: \"rho_d\",\n",
    "            30: \"Ex\",\n",
    "            31: \"Ey\",\n",
    "            32: \"Ez\",\n",
    "            33: \"Etot\",\n",
    "            34: \"avg_cos_theta\",\n",
    "            35: \"avg_gamma\"\n",
    "        }\n",
    "        if id not in id_map:\n",
    "            raise ValueError(f\"Invalid ID: {id}\")\n",
    "        return id_map[id]"
   ]
  },
